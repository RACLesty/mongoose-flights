<%- include('../partials/header') %>
<form action="/flights" method="post">
    <label for="airline">Airline:</label>
    <select id="airline" name="airline" required>
        <% airlines.forEach(airline => { %>
            <option value="<%= airline %>"><%= airline %></option>
        <% }); %>
    </select><br>
    
    <label for="airport">Airport:</label>
    <select id="airport" name="airport" required>
        <% airports.forEach(airport => { %>
            <option value="<%= airport %>"><%= airport %></option>
        <% }); %>
    </select><br>
    
    <label for="flightNo">Flight No.:</label>
    <input type="number" id="flightNo" name="flightNo" required min="10"><br>
    
    <label for="departs">Departure Date:</label>
    <input type="datetime-local" id="departs" name="departs" required><br>

    <label for="destAirport">Destination Airport:</label>
    <select id="destAirport" name="destAirport" required>
        <% airports.forEach(airport => { %>
            <option value="<%= airport %>"><%= airport %></option>
        <% }); %>
    </select><br>
    
    <label for="arrival">Arrival Date:</label>
    <input type="datetime-local" id="arrival" name="arrival" required><br>
    
    <button type="submit">Submit</button>
</form>
<%- include('../partials/footer') %>

